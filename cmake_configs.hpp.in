#pragma once

#cmakedefine ICANVAS_DEVMODE
#define ICANVAS_VERSION_MAJOR @PROJECT_VERSION_MAJOR@
#define ICANVAS_VERSION_MINOR @PROJECT_VERSION_MINOR@
#define ICANVAS_VERSION_PATCH @PROJECT_VERSION_PATCH@

/** @brief The build version of CanvasEngine represented as a string literal. */
#define CANVAS_VERSION_STR \
	"@PROJECT_VERSION_MAJOR@.@PROJECT_VERSION_MINOR@.@PROJECT_VERSION_PATCH@"

/** @brief The build date of CanvasEngine as a long integer. YYYYmmL */
#define CANVAS_BUILD @CANVAS_BUILD_DATE@L

/** @brief Causes CanvasEngine to issue non-critical status/event log messages to stdout. */
#cmakedefine01 CANVAS_ENABLE_LOGS

/** @brief Macro constant that evaluates to `1` if CanvasEngine is built as a
 * shared library. */
#cmakedefine01 CANVAS_SHARED

/** @brief Macro constant that evaluates to `1` if the graphics module pf
 * CanvasEngine is enabled. */
#cmakedefine01 CANVAS_GRAPHICS

/** @brief Macro constant that evaluates to `1` if the graphics module supports
 * VulkanAPI. */
#cmakedefine01 CANVAS_GRAPHICS_ENABLE_VULKAN

/** @brief `1` if this build of CanvasEngine supports Wayland, otherwise `0`. */
#cmakedefine01 CANVAS_GRAPHICS_SUPPORT_WAYLAND

/** @brief `1` if this build of CanvasEngine supports X11, otherwise `0`. */
#cmakedefine01 CANVAS_GRAPHICS_SUPPORT_X11

/** @brief undocumented @todo document this! */
#cmakedefine01 CANVAS_GRAPHICS_ENABLE_GTK

/** @brief undocumented @todo document this! */
#cmakedefine01 CANVAS_AUDIO

/** @brief undocumented @todo document this! */
#cmakedefine01 CANVAS_NETWORK
